;     2.筛选
(define (unique-3-dif-nums n)
  (flatmap (lambda (i)
             (flatmap (lambda (j)
                        (map (lambda (k) (list i j k))
                             (enumerate-interval 1 (- j 1))))
                      (enumerate-interval 1 (- i 1))))
           (enumerate-interval 1 n)))
(define (ans n s)
  (let ((list1 (unique-3-dif-nums n)))
    (filter (lambda (x)
              (= (accumulate + 0 x) s))
            list1)))

